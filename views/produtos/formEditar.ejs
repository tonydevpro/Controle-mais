<%- include('../partials/header', { usuario: usuario }) %>
<link rel="stylesheet" href="/css/formEditar.css" />

<main class="form-container">
  <h1>Editar Produto</h1>

  <form action="/produtos/editar/<%= produto.id %>" method="POST">
    <div class="form-group">
      <label>Nome:</label>
      <input type="text" name="nome" value="<%= produto.nome %>" required />
    </div>

    <div class="form-group">
      <label>Descrição:</label>
      <textarea name="descricao"><%= produto.descricao %></textarea>
    </div>

    <div class="form-group">
      <label>Preço de custo:</label>
      <input type="number" step="0.01" name="preco_custo" value="<%= produto.preco_custo %>" />
    </div>

    <div class="form-group">
      <label>Preço de venda:</label>
      <input type="number" step="0.01" name="preco_venda" value="<%= produto.preco_venda %>" required />
    </div>

    <div class="form-group">
      <label>Quantidade:</label>
      <input type="number" name="quantidade" value="<%= produto.quantidade %>" min="0" />
    </div>

    <button type="submit">Atualizar</button>
  </form>

  <a href="/produtos">Voltar</a>
</main>

<%- include('../partials/footer.ejs') %>
