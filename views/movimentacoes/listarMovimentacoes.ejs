<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Histórico de Movimentações</title>
  <link rel="stylesheet" href="/css/listarMovimentacoes.css">
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
</head>
<body>
  <%- include('../partials/header', { usuario: usuario }) %>

  <main class="pagina-lista">
    <h1>Histórico de Movimentações</h1>

    <table id="tabelaMovimentacoes" border="1" cellpadding="8">
      <thead>
        <tr>
          <th>ID</th>
          <th>Produto</th>
          <th>Tipo</th>
          <th>Quantidade</th>
          <th>Data</th>
          <th>Observação</th>
          <th>Preço Custo</th>
          <th>Preço Venda</th>
          <th>Desconto</th>
          <th>Valor Total</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% movimentacoes.forEach(m => { %>
          <tr>
            <td data-label="ID"><%= m.id %></td>
            <td data-label="Produto"><%= m.nome_produto %></td>
            <td data-label="Tipo"><%= m.tipo %></td>
            <td data-label="Quantidade"><%= m.quantidade %></td>
            <td data-label="Data"><%= m.data.toLocaleString() %></td>
            <td data-label="Observação"><%= m.observacao || '-' %></td>
            <td data-label="Preço Custo">R$ <%= Number(m.preco_custo).toFixed(2) %></td>
            <td data-label="Preço Venda">R$ <%= Number(m.preco_venda).toFixed(2) %></td>
            <td data-label="Desconto">
              <%= m.desconto ? `R$ ${Number(m.desconto).toFixed(2)}` : '-' %>
            </td>
            <td data-label="Valor Total">
              <% 
                let valorUnitario = m.tipo === 'entrada' ? m.preco_custo : m.preco_venda;
                let valorTotal = valorUnitario * m.quantidade;
                if (m.tipo === 'saida' && m.desconto) { valorTotal -= Number(m.desconto); }
              %>
              R$ <%= valorTotal.toFixed(2) %>
            </td>
            <td data-label="Ações">
              <a href="/movimentacoes/editarMov/<%= m.id %>">Editar</a> |
              <form action="/movimentacoes/excluirMov/<%= m.id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Quer mesmo deletar?')">Excluir</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="links-acoes">
      <a href="/movimentacoes/adicionarMovimentacoes">Registrar nova movimentação</a> |
      <a href="/movimentacoes/relatorio">Relatório de Movimentação</a> |
      <a href="/produtos">Voltar aos produtos</a>
    </div>
  </main>

  <!-- jQuery (necessário para DataTables) -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <!-- DataTables JS -->
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

  <script>
    $(document).ready(function () {
      $('#tabelaMovimentacoes').DataTable({
        pageLength: 10,
        lengthMenu: [5, 10, 25, 50],
        order: [[4, 'desc']], // ordena pela coluna de data (índice 4)
        language: {
          search: "Buscar:",
          lengthMenu: "Mostrar _MENU_ registros",
          info: "Mostrando _START_ a _END_ de _TOTAL_ registros",
          paginate: {
            first: "Primeiro",
            last: "Último",
            next: "Próximo",
            previous: "Anterior"
          }
        }
      });
    });
  </script>

  <%- include('../partials/footer.ejs') %>
</body>
</html>
